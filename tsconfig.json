{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "esModuleInterop": true,
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
